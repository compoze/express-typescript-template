{
    "compilerOptions": {
        "experimentalDecorators": true,
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "allowJs": true,
        "moduleResolution": "node",
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
